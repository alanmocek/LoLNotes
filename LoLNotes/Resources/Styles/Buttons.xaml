<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LoLNotes.Resources.Styles">

    <Style x:Key="StylPrzycisku" TargetType="Button">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="24" Width="24" Margin="10,3,0,3" Source="{Binding IconPath}"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontFamily="IBM Plex Sans" FontSize="12" Margin="10,0,0,0"/>
                        <Button Height="16" Width="16" Margin="10,7,0,7" Content="W" BorderThickness="0" Background="Transparent" Cursor="Hand" Command="{Binding ElementName=grid, Path=DataContext.AddEnemyCommand}" CommandParameter="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>